{% extends 'base.html.twig' %}

{% block title %}Adage n°{{ adage.id }}{% endblock %}

{% block body %}
    <div class="h-screen flex flex-col justify-center items-center text-center px-4">
        <h1 class="text-6xl font-extrabold text-gray-800 mb-8 leading-tight">“{{ adage.content }}”</h1>
        <p class="text-4xl text-gray-600 mb-12">— {{ adage.author }}</p>

        {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
        <div class="flex flex-wrap justify-center gap-8 text-xl">
            <a href="{{ path('app_adage') }}" class="text-blue-600 hover:underline">← Retour à la liste</a>
            <a href="{{ path('app_adage_edit', {'id': adage.id}) }}" class="text-blue-600 hover:underline">✏️ Éditer</a>
            <a href="{{ path('app_adage_delete', {'id': adage.id}) }}" class="text-blue-600 hover:underline">🗑️ Supprimer</a>
            <a href="{{ path('generate_pdf', {'id': adage.id}) }}" class="text-blue-600 hover:underline">📄 Générer PDF</a>
        </div>
        {% endif %}
    </div>
{% endblock %}
