{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-16 bg-white p-8 shadow-md rounded-lg">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="mb-4 p-4 bg-red-100 text-red-800 border border-red-300 rounded">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-bold text-center mb-6">Créer un compte</h1>

        {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="mb-6">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'Accepter les conditions', {'label_attr': {'class': 'inline text-sm text-gray-700'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition">
            S’inscrire
        </button>
        {{ form_end(registrationForm) }}
        <a href="{{ path('app_login') }}" class="text-blue-600">Déjà un compte ?</a>
    </div>
{% endblock %}
